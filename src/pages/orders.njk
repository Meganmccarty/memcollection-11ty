---
pagination:
    data: orders
    size: 1
    alias: order
    addAllPagesToCollections: true
eleventyComputed:
    title: "{{ order.name }} | MEMC"
    description: "The detail page for the order {{ order.name }}"
layout: layout.njk
permalink: "/orders/{{ order.name.toLowerCase() }}/"
---
{% block css %}
    <link rel="stylesheet" href="/css/orders.css" />
{% endblock %}

<h1>{{ order.name }} {{ order.authority }} â€“ {{ order.common_name }}</h1>
<p class="hide" id="empty-taxon">There are no family pages in this order.</p>
<ul aria-label="Families" class="taxonomy-list">
    {% for family in families %}
        {% if family.order.name === order.name %}
            <li>
                <a href="/orders/{{ order.name.toLowerCase() }}/families/{{ family.name.toLowerCase() }}/">
                    {% if family.get_image_url %}
                        <img alt="{{ family.alt_text }}" src="{{ family.get_image_url }}" />
                    {% else %}
                        <img alt="" aria-labelledby="{{ family.name }}" src="/assets/placeholder.webp" />
                        <span class="placeholder-label" id="{{ family.name }}">No image</span>
                    {% endif %}
                    <span class="taxon-name">{{ family.name }}</span>
                </a>
            </li>
        {% endif %}
    {% endfor %}
</ul>

{% block scripts %}
    <script src="/js/orders.js" type="module"></script>
    <script src="/js/orders.legacy.js" nomodule></script>
{% endblock %}